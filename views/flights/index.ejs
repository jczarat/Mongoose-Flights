<%- include('../partials/header')%>

  <table>
    <thead>
        <tr id="trhead">
          	<th>Airline&nbsp;</th>
			<th>Airport&nbsp;</th>
			<th>Flight No.&nbsp;</th>
			<th>Depature Time&nbsp;</th>
			<th>Details&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(flight) { %>
            <tr class="trbody">
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
				<td><%= flight.departs %></td>
				<td><a href="/flights/<%= flight._id %>"><button>Details</button></a></td>
            </tr>  
        <% }); %>
    </tbody><br>
</table>
<div>
	<a href="/flights/new"><button>Add A Flight</button></a>
</div>

