<%- include('../partials/header')%>

  <table class=table>
    <thead>
        <tr id="trhead">
          	<th>Airline&nbsp;</th>
			<th>Airport&nbsp;</th>
			<th>Flight No.&nbsp;</th>
			<th>Depature Time&nbsp;</th>
            <th>Details&nbsp;</th>
            <th>Delete&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(flight) { %>
            <tr class="trbody">
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
				<td><%= flight.departs %></td>
                <td><a href="/flights/<%= flight._id %>"><button class="btn btn-outline-primary">Details</button></a></td>
                <td>
                    <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete" class="btn btn-outline-danger">
                    </form>
                </td>
            </tr>  
        <% }); %>
    </tbody><br>
</table>
<div>
    <form action="/flights/new" method="GET">
        <input type="submit" value="Add A Flight" class="btn btn-outline-success">
    </form>
</div>

