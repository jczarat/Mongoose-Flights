
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flights</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <table>
    <thead>
        <tr>
          <th>Airline&nbsp;</th>
          <th>Airport&nbsp;</th>
          <th>Flight No.&nbsp;</th>
          <th>Depature Time&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(flight) { %>
            <tr>
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= flight.departs %></td>
            </tr>  
        <% }); %>
      </tbody><br>
    </table>
    <a href="/flights/new"><button>Add A Flight</button></a>
</body>
</html>